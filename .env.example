# Application Environment
NODE_ENV=development

# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/arbitrage_db?schema=public"

# Redis Configuration
REDIS_URL="redis://localhost:6379"

# Binance API Credentials
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here
# Set to true to use Binance testnet
BINANCE_TESTNET=false

# OKX API Credentials
OKX_API_KEY=your_okx_api_key_here
OKX_API_SECRET=your_okx_api_secret_here
OKX_PASSPHRASE=your_okx_passphrase_here
# Set to true to use OKX demo trading
OKX_TESTNET=false

# Telegram Bot (Optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Trading Configuration (Override defaults in config/default.json)
MIN_SPREAD_THRESHOLD=0.0005
MAX_POSITION_SIZE_USD=10000
DEFAULT_LEVERAGE=1

# Risk Management
MAX_DAILY_LOSS=1000
MAX_DRAWDOWN=0.1
POSITION_SIZE_PERCENT=0.1

# Monitoring
HEALTH_CHECK_INTERVAL_MS=60000
PRICE_UPDATE_INTERVAL_MS=1000
FUNDING_RATE_CHECK_INTERVAL_MS=300000

# Logging
LOG_LEVEL=info
LOG_PRETTY=true
