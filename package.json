{
  "name": "cross-exchange-arbitrage-bot",
  "version": "0.1.0",
  "description": "跨交易所資金費率套利平台 - 自動偵測幣安和 OKX 的資金費率差異並執行套利交易",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "arbitrage-bot": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "cli": "tsx src/cli/index.ts",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:api": "pnpm build && node dist/test-api.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f"
  },
  "keywords": [
    "arbitrage",
    "funding-rate",
    "cryptocurrency",
    "trading-bot",
    "binance",
    "okx"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "@binance/connector": "^3.6.1",
    "@prisma/client": "^5.20.0",
    "axios": "^1.7.7",
    "ccxt": "^4.5.11",
    "chalk": "^5.6.2",
    "cli-table3": "^0.6.5",
    "commander": "^12.1.0",
    "decimal.js": "^10.6.0",
    "dotenv": "^16.4.5",
    "ioredis": "^5.4.1",
    "log-update": "^7.0.1",
    "pino": "^9.4.0",
    "pino-pretty": "^11.2.2",
    "strip-ansi": "^7.1.2",
    "telegraf": "^4.16.3",
    "ws": "^8.18.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/decimal.js": "^7.4.3",
    "@types/node": "^20.16.11",
    "@types/ws": "^8.5.12",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitest/coverage-v8": "^2.1.2",
    "@vitest/ui": "^2.1.2",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.3.3",
    "prisma": "^5.20.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "vitest": "^2.1.2"
  }
}
