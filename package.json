{
  "name": "cross-exchange-arbitrage-bot",
  "version": "0.1.0",
  "description": "跨交易所資金費率套利平台 - 自動偵測幣安和 OKX 的資金費率差異並執行套利交易",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "arbitrage-bot": "./dist/cli/index.js"
  },
  "scripts": {
    "postinstall": "prisma generate",
    "build": "rm -rf .next && prisma generate && next build",
    "dev": "tsx watch server.ts",
    "dev:pretty": "tsx watch server.ts | pino-pretty",
    "start": "prisma migrate deploy && tsx server.ts",
    "cli": "tsx src/cli/index.ts",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:api": "pnpm build && node dist/test-api.js",
    "test:unit": "vitest run tests/unit",
    "test:integration": "RUN_INTEGRATION_TESTS=true vitest run tests/integration",
    "test:performance": "PERFORMANCE_TEST=true vitest run tests/performance",
    "test:trading": "RUN_TRADING_INTEGRATION_TESTS=true vitest run tests/integration/trading",
    "test:trading:perf": "TRADING_PERFORMANCE_TEST=true vitest run tests/performance/trading",
    "lint": "eslint . --max-warnings 500",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.ts\" \"app/**/*.{ts,tsx}\" \"components/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"app/**/*.{ts,tsx}\" \"components/**/*.{ts,tsx}\"",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "update-oi-symbols": "tsx src/scripts/update-oi-symbols.ts",
    "validate-trading": "tsx src/scripts/trading-validation/validate-trading.ts",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f"
  },
  "keywords": [
    "arbitrage",
    "funding-rate",
    "cryptocurrency",
    "trading-bot",
    "binance",
    "okx"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "@binance/connector": "^3.6.1",
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "7.2.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tailwindcss/postcss": "^4.1.18",
    "@tanstack/react-query": "^5.90.17",
    "@tanstack/react-query-devtools": "^5.91.2",
    "@types/bcrypt": "^6.0.0",
    "@types/inquirer": "^9.0.9",
    "@types/jsonwebtoken": "^9.0.10",
    "axios": "^1.13.2",
    "bcrypt": "^6.0.0",
    "ccxt": "^4.5.30",
    "chalk": "^5.6.2",
    "class-variance-authority": "^0.7.1",
    "cli-table3": "^0.6.5",
    "clsx": "^2.1.1",
    "commander": "^14.0.2",
    "date-fns": "^4.1.0",
    "decimal.js": "^10.6.0",
    "dotenv": "^17.2.3",
    "https-proxy-agent": "^7.0.6",
    "inquirer": "^13.1.0",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.3",
    "log-update": "^7.0.2",
    "lucide-react": "^0.562.0",
    "next": "^15.5.9",
    "next-intl": "^4.7.0",
    "next-themes": "^0.4.6",
    "nodemailer": "^7.0.12",
    "p-limit": "^7.2.0",
    "pg": "^8.16.3",
    "pino": "^10.1.0",
    "postcss": "^8.5.6",
    "protobufjs": "^7.5.4",
    "react": "19",
    "react-dom": "19",
    "recharts": "^3.6.0",
    "socket.io": "^4.8.3",
    "socket.io-client": "^4.8.3",
    "socks-proxy-agent": "^8.0.5",
    "sonner": "^2.0.7",
    "strip-ansi": "^7.1.2",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "telegraf": "^4.16.3",
    "ws": "^8.18.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.16.11",
    "@types/nodemailer": "^7.0.4",
    "@types/react": "19",
    "@types/react-dom": "19",
    "@types/ws": "^8.5.12",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "jsdom": "^27.4.0",
    "pino-pretty": "^13.1.3",
    "playwright": "^1.57.0",
    "prettier": "^3.7.4",
    "prisma": "^7.2.0",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.21.0",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.51.0",
    "vitest": "^4.0.16"
  }
}
